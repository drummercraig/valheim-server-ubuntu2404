
# === Server Identity ===
SERVER_NAME=My Valheim Server
WORLD_NAME=Dedicated
SERVER_PASSWORD=secret       # REQUIRED: Min 5 characters
SERVER_PUBLIC=1              # 1=public, 0=private
SERVER_PORT=2456

# === Crossplay ===
CROSSPLAY_ENABLED=false      # true=Xbox/Game Pass support, false=Steam only

# === World Modifiers ===
# Preset (optional - overrides individual modifiers)
# PRESET=normal              # Options: normal, casual, easy, hard, hardcore, immersive, hammer

# Individual Modifiers
MODIFIER_COMBAT=hard
MODIFIER_RESOURCES=more
MODIFIER_PORTALS=casual
MODIFIER_DEATHPENALTY=casual
SETKEY_PLAYEREVENTS=true

# === Backup Settings ===
BACKUP_SAVEINTERVAL=1800     # Seconds between saves
BACKUP_COUNT=96              # Number of backups to keep
BACKUP_SHORT=7200            # First backup interval
BACKUP_LONG=43200            # Subsequent backup interval

# === Scheduled Restarts ===
RESTART_CRON=0 5 * * *       # Daily at 5 AM
RESTART_IF_IDLE=true
TZ=America/Phoenix

# === Mod Loader Option ===
MOD_LOADER=BepInEx        # Options: BepInEx, ValheimPlus, None

# === System ===
PUID=1000
PGID=1000

# === Paths ===
PLUGIN_SRC=/valheim-data/BepInEx/plugins
PLUGIN_DEST=/valheim/BepInEx/plugins
PATCHER_SRC=/valheim-data/BepInEx/patchers
PATCHER_DEST=/valheim/BepInEx/patchers
CONFIG_SRC=/valheim-data/BepInEx/config
CONFIG_DEST=/valheim/BepInEx/config
WORLD_SRC=/valheim-data/worlds
WORLD_BACKUP=/valheim-data/backups
